<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobilna.MainPage">

    <ScrollView>
        <VerticalStackLayout
            BackgroundColor="White"
            Padding="0,20,0,0">
            <Label
                Text="Domek w górach"
                FontSize="Large"
                TextColor="#808080"
                Margin="10"/>

            <Image
                Source="obraz.jpg"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Aspect="Fill"
                HeightRequest="185"/>


            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="Teal"
            >
                <Button
                    Text="Polub"
                    Clicked="dodaj"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#008080"
                />
                <Button
                    Text="Usuń"
                    Clicked="usun"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#008080"
                />
                <Button
                    Text="Zapisz"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#008080"
                />
            </StackLayout>

            <Label
                Text="0 polubień"
                x:Name="polubienialabel"
                HorizontalOptions="EndAndExpand"
                TextColor="#808080"
                VerticalOptions="Center"
            />

            <BoxView 
                HeightRequest="1"
                BackgroundColor="Gray"
                HorizontalOptions="FillAndExpand"
            />

            <Label
                Text="Opis"
                FontAttributes="Bold"
                TextColor="#808080"
            />
            <Label
                Text="Odwiedź komfortowy domek w Sudetach, blisko do szlaków turystycznych"
                TextColor="#808080"
            />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
